    <div style="width: 100%;background-color: rgb(131, 173, 205);padding-bottom: 4px;">
      <h2 style="color:black">Study Materials</h2>

    </div>

    <% materials.forEach(function(elem,index){%>

      <% if(elem.MaterialType=="StudyMaterial" ){ %>
        <div class="card" style="width:100%;height:auto;">

          <div
            style=" width:100% ;display:grid;grid-template-columns:20% 30% 20% 20% ;gap:25px;padding-bottom: 20px;border: 2px solid black;">
            <div style="width:100% ;">
              <% if(elem.previewimg){%>
                <img class="border" style="width:100%;height:110px; margin:0px" src="<%=elem.previewimg%>" alt="">
                <% } else{ %>
                  <img class="border" style="width:100%;height:110px; margin:0px"
                    src="https://images.unsplash.com/photo-1673877980197-c3ce24a8ab17?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHwyfHx8ZW58MHx8fHw%3D&auto=format&fit=crop&w=600&q=60"
                    alt="">
                  <% } %>
            </div>


            <div style="width:100% ;height: auto;">
              <div class="card-body" style="width: 100%; ">
                <h5 class="card-title">
                  <%=elem.content %>
                </h5>
                <div class="card-text" style="height:auto;">
                  <%=elem.details %>
                </div>
              </div>
            </div>

            <form action="/EditstudyMaterial" method="POST" id="myform<%=index %>" style-="width:100% ;">
              <input type="hidden" class="form-control" id="id<%=index%>" name="id" value="<%=elem._id%>">
              <div class="formgroup">
                <input type="text" class="form-control" id="filedata<%=index%>" name="filedata" value="<%=elem.filedata%>">
              </div>
              
              <div class="formgroup">
                <input type="text" class="form-control" id="topic<%=index%>" name="topic" value="<%=elem.topic%>">
              </div>

              <div class="formgroup">
                <input type="text" class="form-control" id="details<%=index%>" name="details" value="<%=elem.details%>">
              </div>
              <div class="formgroup">
                <input type="text" class="form-control" id="previewim<%=index%>" name="previewimg" value="<%=elem.previewimg%>">
              </div>

              <div class="" style="margin-top:10px">
                <a href="<%=elem.filedata%>" style="width:100%;">
                  click here
                </a>
              </div>

              <div style="display: grid; grid-template-columns: 50% 50%;margin-top: 20px;width:100% ;">
                <button type="button" class="btn btn-primary" style="border-radius:
                20px;height: 50px;" name="<%=index %>" id="button<%=index %>"
                  onclick="getMaterial(this)">Update</button>
                <button type="button" name=<%=elem._id%> class="btn btn-danger" style="border-radius:
                  20px;height: 50px;"
                  onclick="DeleteMaterial(this)">Delete
                  Material</button>
              </div>

            </form>

            <!-----------upload file---------->
            <div class="form-group">
              <div class="" style="display:grid; grid-template-columns: 50% 50%; gap: 47px;">

                <span> Upload Material<input type="file" id="photo1<%=index %>" /></span>
                <button type="button" class="btn btn-primary" style="border-radius: 20px;height: 50px;"
                  name="<%=index %>" onclick="uploadImage1(this)">Upload
                  Material</button>
              </div>
            </div>

            <!------------------------------------>
          </div>
        </div>

        <% }%>
          <%}) %>
